{
	"compilerOptions": {
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"jsx": "react-jsx",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src2/**/*.ts",
		"./src2/**/*.tsx"
	]
}
